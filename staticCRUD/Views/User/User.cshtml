@model DataTable
@using System.Data

    @*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
    *@
    @{
    }
   
    <table class="table table-hover">
        <thead>
        <h3 class="text-dark fw-bold">User List</h3>
        <a class="btn btn-primary float-end" asp-controller="User" asp-action="AddUser">Add User</a>
            <tr>
               @*  <th scope="col">UserID</th> *@
                <th scope="col">User Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">MobileNo</th>
                <th scope="col">Address</th>
                <th scope="col">IsActive</th>
            <th class="text-center" scope="col" colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (DataRow dataRow in Model.Rows)
            {
                <tr>
                    @* <td>@dataRow["UserID"]</td> *@
                    <td>@dataRow["UserName"]</td>
                    <td>@dataRow["Email"]</td>
                    <td>@dataRow["Password"]</td>
                    <td>@dataRow["MobileNo"]</td>
                    <td>@dataRow["Address"]</td>
                    <td>@dataRow["IsActive"]</td>
                    <td><a asp-controller="User" asp-action="AddUser" asp-route-UserID="@dataRow["UserID"]" class="btn btn-outline-warning btn-xs bi bi-pencil"></a></td>
                    <td>
                        <form method="post" asp-controller="User" asp-action="DeleteUser">
                            <input type="hidden" name="UserID" value="@dataRow["UserID"]" />
                        <button onclick="return confirm('Sure Delete??')" type="submit" class="btn btn-outline-danger btn-xs">
                                <i class="bi bi-x"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }         
        </tbody>
    </table>