@model DataTable
@using System.Data


<table class="table table-hover">
    <thead>
        <h3 class="text-dark fw-bold">Customer List</h3>
        <a class="btn btn-primary  float-end" asp-controller="Customer" asp-action="AddCustomer">Add Customer</a>
        <tr>         
          @*   <th scope="col">CustomerId</th> *@
            <th scope="col">Customer Name</th>
            <th scope="col">Home Address</th>
            <th scope="col">Email</th>
            <th scope="col">MobilePhone</th>
            <th scope="col">GST NO</th>
            <th scope="col">City Name</th>
            <th scope="col">PinCode</th>
            <th scope="col">Net Amount</th>
            <th scope="col">User Name</th>
            <th class="text-center" scope="col" colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow dataRow in Model.Rows)
        {
            <tr>
                
               
                @* <td>@dataRow["CustomerId"]</td> *@
                <td>@dataRow["CustomerName"]</td>
                <td>@dataRow["HomeAddress"]</td>
                <td>@dataRow["Email"]</td>
                <td>@dataRow["MobileNo"]</td>
                <td>@dataRow["GSTNO"]</td>
                <td>@dataRow["CityName"]</td>
                <td>@dataRow["PinCode"]</td>
                <td>@dataRow["NetAmount"]</td>
                <td>@dataRow["UserName"]</td>
                <td>
                    <form method="post" asp-controller="Customer" asp-action="DeleteCustomer">
                        <input type="hidden" name="CustomerID" value="@dataRow["CustomerID"]" />
                        <button onclick="return confirm('Sure Delete??')" type="submit" class="btn btn-outline-danger btn-xs">
                            <i class="bi bi-x"></i>
                        </button>
                    </form>
                </td>
                <td><a asp-controller="Customer" asp-action="AddCustomer" asp-route-CustomerID="@dataRow["CustomerID"]" class="btn btn-outline-warning btn-xs  bi bi-pencil"></a></td>
            </tr>
        }
        
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}